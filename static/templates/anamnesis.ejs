<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="https://use.typekit.net/inw2mil.css">

    <meta charset="UTF-8">
    <title>Document</title>

    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        img {
            width: 100%;
        }

        a {
            text-decoration: none;
        }

        h1 {
            font-weight: 600;
            text-align: center;
            font-size: 105%;
            letter-spacing: .75px;
        }

        small {
            display: block;
            text-align: center;
            font-size: 61.75%;
        }



        body {
            font-family: ivyjournal, sans-serif;
            font-weight: 400;
            font-style: normal;
            font-size: 12px;
        }

        .option-checkbox {
            margin: 0 1px 0 5px;
            padding: 0;
            height: 10px;
            width: 10px;
            border: 1px solid black;
            display: inline-block;
            border-width: thin;
        }


        hr {
            margin-top: 20px;
        }

        div,
        p {
            word-wrap: break-word;
            margin: 0;
        }

        .blank-space {
            padding-top: 14px;
            border-bottom: 1px solid #383838;
            border-width: thin;
        }

        .blank-space p {
            margin-left: 7px;
        }

        .personal-data-table p {
            font-size: 88%;
        }

        label {
            font-weight: 600;
            font-size: 80%;
        }
    </style>

</head>

<body>

    <div class="container">

        <table style="margin-bottom: 9px;">
            <tr>
                <td style="text-align: center;">
                    <img src="<%=config.base_url%>/static/images/header.png?authorization=<%= config.token %>" />
                </td>
            </tr>
            <tr>
                <td>
                    <h1>Anamnese Psicológica</h1>
                    <small>
                        Baseado em Kuyken, W., Padesky, C. A., & Dudley, R. (2010. Conceitualização de casos
                        colaborativa. Porto Alegre, Artmed)
                    </small>
                </td>
            </tr>
        </table>


        <table class="personal-data-table" width="100%">
            <tr>
                <td height="33" width="1%" valign="bottom">
                    <label>Nome: </label>
                </td>
                <td height="33" class="blank-space" width="68%">
                    <% if (patientData && patientData.name) { %>

                    <p style="display: inline-block;">
                        <%= patientData.name %>
                    </p>

                    <% } %>
                </td>

                <td height="33" width="1%" valign="bottom">
                    <label>Nascimento: </label>
                </td>
                <td height="33" class="blank-space" width="28%">
                    <% if (patientData && patientData.birthday) { %>
                    <p style="display: inline-block;">
                        <%= patientData.birthday %>
                    </p>
                    <% } else {%>
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    &#47;
                    &nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;
                    &#47;
                    <% } %>

                </td>
            </tr>
        </table>

        <table class="personal-data-table" width="100%">
            <tr>
                <td height="33" width="1%" valign="bottom">
                    <label>Nacionalidade: </label>
                </td>
                <td height="33" class="blank-space" width="32%">
                    <% if (patientData && patientData.nationality) { %>
                    <p style="display: inline-block;">
                        <%= patientData.nationality %>
                    </p>
                    <% } %>
                </td>

                <td height="33" width="1%" valign="bottom">
                    <label>Religião: </label>
                </td>
                <td height="33" class="blank-space" width="32%">
                    <% if (patientData && patientData.religion) { %>
                    <p style="display: inline-block;">
                        <%= patientData.Address.street %>
                    </p>
                    <% } %>
                </td>

                <td height="33" width="1%" valign="bottom">
                    <label>Telefone: </label>
                </td>
                <td height="33" class="blank-space" width="32%">
                    <% if (patientData && patientData.Contact && patientData.Contact.phone) { %>
                    <p style="display: inline-block;">
                        <%= patientData.Contact.phone %>
                    </p>
                    <% } %>
                </td>



            </tr>
        </table>

        <table class="personal-data-table" width="100%">
            <tr>
                <td height="33" width="1%" valign="bottom">
                    <label>Endereço: </label>
                </td>
                <td height="33" class="blank-space" width="68%">
                    <% if (patientData && patientData.Address && patientData.Address.street && patientData.Address.number && patientData.Address.number) { %>
                    <p style="display: inline-block;">
                        <%= patientData.Address.street %>,
                        <%= patientData.Address.number %> -
                        <%= patientData.Address.city %>
                    </p>
                    <% } %>
                </td>
                <td height="33" width="1%" valign="bottom">
                    <label>Profissão: </label>
                </td>
                <td height="33" class="blank-space" width="28%">
                    <% if (patientData && patientData.profession) { %>
                    <p style="display: inline-block;">
                        <%= patientData.profession %>
                    </p>
                    <% } %>
                </td>
            </tr>
        </table>

        <table class="personal-data-table" width="100%">
            <tr>
                <td height="33" width="12%" valign="bottom">
                    <label>Estado Civil: </label>
                </td>
                <td height="33" class="blank-space" width="30%">
                    <% if (patientData && patientData.MaritalStatus && patientData.MaritalStatus.MaritalStatusType.name && patientData.MaritalStatus.MaritalStatusType.name) { %>
                    <p style="display: inline-block;">
                        <%= patientData.MaritalStatus.MaritalStatusType.name %>
                    </p>
                    <% } %>
                </td>

                <td height="33" width="16.8%" valign="bottom">
                    <label>Tempo de União: </label>
                </td>
                <td height="33" class="blank-space" width="20%">
                    <% if (patientData && patientData.MaritalStatus && patientData.MaritalStatus.union_time) { %>
                    <p style="display: inline-block;">
                        <%= patientData.MaritalStatus.union_time %>
                    </p>
                    <% } %>
                </td>

                <td height="33" width="1%" valign="bottom">
                    <label>Filhos: </label>
                </td>
                <td height="33" class="blank-space" width="9%">
                    <% if (patientData && patientData.MaritalStatus && patientData.MaritalStatus.childrens_number) { %>
                    <p style="display: inline-block;">
                        <%= patientData.MaritalStatus.childrens_number %>
                    </p>
                    <% } %>
                </td>



            </tr>
        </table>


        <table class="personal-data-table" width="100%">
            <tr>
                <td height="33" width="19.8%" valign="bottom">
                    <label>Encaminhado por: </label>
                </td>
                <td height="33" class="blank-space" width="38%">
                    <% if (patientData && patientData.forwarded_by) { %>
                    <p style="display: inline-block;">
                        <%= patientData.forwarded_by %>
                    </p>
                    <% } %>
                </td>
                <td height="33" width="14%" valign="bottom">
                    <label>Especialidade: </label>
                </td>
                <td height="33" class="blank-space" width="48%">
                    <% if (patientData && patientData.forwarded_by_specialization) { %>
                    <p style="display: inline-block;">
                        <%= patientData.forwarded_by_specialization %>
                    </p>
                    <% } %>
                </td>
            </tr>
        </table>


        <% questions.forEach(function(question) { %>
        <div style="page-break-inside: avoid;">

            <table style="margin-top: 20px;">
                <tr>
                    <table id="questions">
                        <tr>
                            <td>
                                <h4>
                                    <%= question.title %>
                                </h4>
                            </td>
                        </tr>

                    </table>
                </tr>

                <% if (question.type == 0) { %>
                <tr>
                    <% question.options.forEach(function(option) { %>
                    <div style="display: inline-block">
                        <div class="option-checkbox"></div>
                        <p style="display: inline-block;">
                            <%= option.title %>
                        </p>
                    </div>
                    <% }); %>
                </tr>
                <% } %>

                <tr>
                    <table id="lines">
                        <% for(let i = 0; i < question.line_number; i++) { %>
                        <tr>
                            <hr>
                        </tr>
                        <% } %>
                    </table>
                </tr>

            </table>

        </div>

        <% }); %>

    </div>


</body>


</html>