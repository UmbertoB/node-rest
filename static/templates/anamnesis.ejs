<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="https://use.typekit.net/inw2mil.css">

    <meta charset="UTF-8">
    <title>Document</title>

    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        img {
            width: 100%;
        }

        a {
            text-decoration: none;
        }

        h1 {
            font-weight: 600;
            text-align: center;
            font-size: 105%;
            letter-spacing: .75px;
        }

        small {
            display: block;
            text-align: center;
            font-size: 61.75%;
        }



        body {
            font-family: ivyjournal, sans-serif;
            font-weight: 400;
            font-style: normal;
            font-size: 12px;
        }

        .option-checkbox {
            margin: 0 1px 0 5px;
            padding: 0;
            height: 10px;
            width: 10px;
            border: 1px solid black;
            display: inline-block;
            border-width: thin;
        }

        hr {
            margin-top: 20px;
        }

        div,
        p {
            word-wrap: break-word;
        }

        .personal-data-table td {
            border-bottom: 1px solid #242424;
            border-width: thin;
        }

        .personal-data-table p {
            font-size: 88%;
        }

        label {
            font-weight: 600;
            font-size: 80%;
        }
    </style>

</head>

<body>

    <div class="container">

        <table style="margin-bottom: 20px;">
            <tr>
                <td style="text-align: center;">
                    <img src="<%=config.base_url%>/static/images/header.png?authorization=<%= config.token %>" />
                </td>
            </tr>
            <tr>
                <td>
                    <h1>Anamnese Psicológica</h1>
                    <small>
                        Baseado em Kuyken, W., Padesky, C. A., & Dudley, R. (2010. Conceitualização de casos
                        colaborativa. Porto Alegre, Artmed)
                    </small>
                </td>
            </tr>
        </table>


        <table class="personal-data-table" width="100%" cellspacing="10">
            <tr>
                <td height="20" width="60%" valign="top">
                    <label>Nome: </label>
                    <% if (patientData && patientData.name) { %>

                    <p style="display: inline-block;">
                        <%= patientData.name %>
                    </p>

                    <% } %>
                </td>
                <td height="20" width="40%" valign="top">
                    <label>Nascimento: </label>
                    <% if (patientData && patientData.name) { %>
                    <p style="display: inline-block;">
                        <%= patientData.name %>
                    </p>
                    <% } %>
                </td>
            </tr>
        </table>

        <table class="personal-data-table" width="100%" cellspacing="10">
            <tr>
                <td height="20" width="75%" valign="top">
                    <label>Endereço: </label>
                    <% if (patientData && patientData.name) { %>
                    <p style="display: inline-block;">
                        <%= patientData.street %>
                    </p>
                    <% } %>
                </td>
                <td height="20" width="25%" valign="top">
                    <label>Número: </label>
                    <% if (patientData && patientData.name) { %>
                    <p style="display: inline-block;">
                        <%= patientData.street %>
                    </p>
                    <% } %>
                </td>
            </tr>
        </table>

        <table class="personal-data-table" width="100%" cellspacing="10">
            <tr>
                <td height="20" width="50%" valign="top">
                    <label>Telefone: </label>
                    <% if (patientData && patientData.name) { %>
                    <p style="display: inline-block;">
                        <%= patientData.name %>
                    </p>
                    <% } %>
                </td>
                <td height="20" width="50%" valign="top">
                    <label>Email: </label>
                    <% if (patientData && patientData.name) { %>
                    <p style="display: inline-block;">
                        <%= patientData.name %>
                    </p>
                    <% } %>
                </td>
            </tr>
        </table>

        <table class="personal-data-table" width="100%" cellspacing="10">
            <tr>
                <td height="20" width="50%" valign="top">
                    <label>Instrução: </label>
                    <% if (patientData && patientData.name) { %>
                    <p style="display: inline-block;">
                        <%= patientData.name %>
                    </p>
                    <% } %>
                </td>
                <td height="20" width="50%" valign="top">
                    <label>Profissão: </label>
                    <% if (patientData && patientData.name) { %>
                    <p style="display: inline-block;">
                        <%= patientData.name %>
                    </p>
                    <% } %>
                </td>
            </tr>
        </table>

        <table class="personal-data-table" width="100%" cellspacing="10">
            <tr>
                <td height="20" width="50%" valign="top">
                    <label>Estado Civil:</label>
                    <% if (patientData && patientData.name) { %>
                    <p style="display: inline-block;">
                        <%= patientData.name %>
                    </p>
                    <% } %>
                </td>
                <td height="20" width="50%" valign="top">
                    <label>Encaminhado por:</label>
                    <% if (patientData && patientData.name) { %>
                    <p style="display: inline-block;">
                        <%= patientData.name %>
                    </p>
                    <% } %>
                </td>
            </tr>
        </table>


        <% questions.forEach(function(question) { %>
        <div style="page-break-inside: avoid;">

            <table style="margin-top: 20px;">
                <tr>
                    <table id="questions">
                        <tr>
                            <td>
                                <h4>
                                    <%= question.title %>
                                </h4>
                            </td>
                        </tr>

                    </table>
                </tr>

                <% if (question.type == 0) { %>
                <tr>
                    <% question.options.forEach(function(option) { %>
                    <div style="display: inline-block">
                        <div class="option-checkbox"></div>
                        <p style="display: inline-block;">
                            <%= option.title %>
                        </p>
                    </div>
                    <% }); %>
                </tr>
                <% } %>

                <tr>
                    <table id="lines">
                        <% for(let i = 0; i < question.line_number; i++) { %>
                        <tr>
                            <hr>
                        </tr>
                        <% } %>
                    </table>
                </tr>

            </table>

        </div>

        <% }); %>

    </div>


</body>


</html>