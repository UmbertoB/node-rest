<!DOCTYPE html>
<html lang="en">

<head>
    <link rel="stylesheet" href="https://use.typekit.net/inw2mil.css">

    <meta charset="UTF-8">
    <title>Document</title>

    <style>
        * {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        img {
            width: 100%;
        }

        a {
            text-decoration: none;
        }

        body {
            font-family: ivyjournal, sans-serif;
            font-weight: 400;
            font-style: normal;
            font-size: 12px;
        }

        hr {
            margin-top: 20px;
        }
        
        h1 {
            font-weight: 600;
            text-align: center;
            font-size: 105%;
            letter-spacing: .75px;
        }

        div,
        span,
        p {
            word-wrap: break-word;
            text-align: justify;
        }

        div span {
            font-weight: bold;
        }

        .attendance-date {
            font-weight: bold;
            margin: 8px 0 0 12px;
        }

        .session-description {
            padding: 12px;
        }
    </style>

</head>

<body>

    <table style="margin-bottom: 20px;">
        <tr>
            <td style="text-align: center;">
                <img src="<%=config.base_url%>/static/images/header.png?authorization=<%= config.token %>" />
            </td>
        </tr>
        <tr>
            <td>
                <h1>Evolução Psicológica</h1>
            </td>
        </tr>
    </table>

    <% sessions.forEach(function(session) { %>
    <div style="page-break-inside: avoid; margin-top: 20px; min-height: 120px; height: auto; border: 1px solid black;">


        <p class="attendance-date">Data:
            <%= session.attendance_at %>
        </p>



        <p class="session-description">
            <%= session.description %>
        </p>


    </div>
    <% }); %>

</body>


</html>